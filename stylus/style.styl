			&__title
				float left
				width auto
				margin 0

		&-main
			margin 0

	.navigation-social
		float right
		width auto
		margin 0
		padding-bottom 1em

		li
			vertical-align top

	.copyright
	.portrait
		display none

	.secondary-menu
		clear both
		overflow auto
		margin 0
