/**
 * Mixins
 **/
@require 'mixins.styl'
@require 'helpers.styl'
@require 'fonts.styl'
@require 'variables.styl'
@require 'animations.styl'
@require 'reset.styl'
@require 'prism.styl'
@require 'genericons.styl'

/**
 * Structure
 **/
.site-main
	margin-left size-widthHeader

.content-area
	width size-widthContent
	margin auto

.site-content
	margin 4em auto

/**
 * Header
 **/
.site-header
	width size-widthHeader
	float left

	&:after
		content ""
		position fixed
		background lighten(colorBackground, 4%)
		width size-widthHeader
		box-shadow 0 0 5px darken(colorBackground, 10%)
		left 0
		bottom 0
		top 0
		z-index 1

	&__main
		background lighten(colorBackground, 4%)
		padding 1em 2.5em
		color colorText
		text-align center
		position relative
		z-index 2

	&__content a:hover
	&__content a:focus
		color colorEmphasis

	&__title
		margin-top 0

		a
			color colorCode

		a:hover
		a:focus
			color colorLink

/**
 * Social
 */
.navigation-social
	margin 2em 0

	li
		display inline-block

	&__link
		font-size 0
		font-weight 400
		display block
		width 56px
		height 56px
		background colorBackground
		border-radius 5%
		color colorText
		overflow hidden
		text-align center
		-webkit-font-smoothing antialiased

		&:hover
		&:focus
			color colorText

			.gi
				transition all .1s ease

			.gi-pinterest
				background #dc474d
				long-shadow(35, 0, darken(#b0393e, 30%))

			.gi-googleplus-alt
				background #df664f
				long-shadow(35, 0, darken(#b2523f, 30%))

			.gi-twitter
				background #48b9eb
				long-shadow(35, 0, darken(#3a94bc, 30%))

			.gi-facebook-alt
				background #3b5998
				long-shadow(35, 0, darken(#2f477a, 30%))

			.gi-wordpress
				background #464646
				long-shadow(35, 0, darken(#383838, 30%))

			.gi-linkedin
				background #005a87
				long-shadow(35, 0, darken(#00486c, 30%))

			.gi-codepen
				background #252527
				long-shadow(35, 0, darken(#1e1e1f, 30%))

			.gi-github
				background #4183c4
				long-shadow(35, 0, darken(#34699d, 30%))

	.gi
		font-size 40px
		line-height 1.5em
		width 56px
		height 56px
		transition all .5s ease
		long-shadow(35, 0, darken(colorBackground, 20%))

.secondary-menu
	margin 4em 0

	&__link
		font 1.6em fontsTitle

	.gi
		display block
		line-height .5em
		margin 10px auto
		text-align center
		font-size 3em
		width auto
		height auto

/**
 * Menu principal
 **/
.navigation-main
	margin 0 auto 20px
	padding 0
	list-style none
	text-align right
	width size-widthContent

	&__item
		display inline-block

		a
			display block
			font 2em/1em fontsTitle
			padding 20px 0 10px
			position relative
			transform translateZ(0)
			outline 0

			&:before
			&:after
				content ""
				color colorText
				opacity 0
				z-index -1
				transition all .6s ease

			&:before
				content "< "
				transform translateX(20px)

			&:after
				content " />"
				transform translateX(-20px)

		& a:hover:before
		& a:focus:before
		&--current a:before
		& a:hover:after
		& a:focus:after
		&--current a:after
			opacity 1
			transform translateX(0px)

		&--current a:before
		&--current a:after
			transition all 0s, color .6s ease

		&--current a:hover:before
		&--current a:hover:after
			transition color .2s ease

		&:nth-child(1) a:hover
		&:nth-child(1) a:focus
		&--current:nth-child(1) a
		&--current:nth-child(1) a:hover:before
		&--current:nth-child(1) a:focus:before
		&--current:nth-child(1) a:hover:after
		&--current:nth-child(1) a:focus:after
			color colorStrong

		&:nth-child(2) a:hover
		&:nth-child(2) a:focus
		&--current:nth-child(2) a
		&--current:nth-child(2) a:hover:before
		&--current:nth-child(2) a:focus:before
		&--current:nth-child(2) a:hover:after
		&--current:nth-child(2) a:focus:after
			color colorTitle

		&:nth-child(3) a:hover
		&:nth-child(3) a:focus
		&--current:nth-child(3) a
		&--current:nth-child(3) a:hover:before
		&--current:nth-child(3) a:focus:before
		&--current:nth-child(3) a:hover:after
		&--current:nth-child(3) a:focus:after
			color colorCode

		&:nth-child(4) a:hover
		&:nth-child(4) a:focus
		&--current:nth-child(4) a
		&--current:nth-child(4) a:hover:before
		&--current:nth-child(4) a:focus:before
		&--current:nth-child(4) a:hover:after
		&--current:nth-child(4) a:focus:after
			color colorEmphasis

/**
 * Formulaires
 **/
.form
	&-group
		position relative
		padding 1em 0 .5em
		box-sizing border-box

		& + &
		& + .form-submit
			margin-top 20px

		&:before
		&:after
			content ""
			height 1px
			position absolute
			bottom 4px
			left 0
			right 0
			background lighten(colorBackground, 20%)

		&:after
			background colorCode
			transform scaleX(0)
			transition transform .3s

		&--label .form-label
			transform translateY(0) scale(.75)

		&--focus
			.form-label
				color colorCode

			&:after
				transform scaleX(1)

	&-label
		position relative
		margin 0
		display block
		color darken(colorText, 10%)
		line-height 1
		transform translateY(1.5em)
		transition transform .3s, color .3s
		transform-origin 0 50%

	&-input
		position relative
		display block
		margin 0
		width 100%
		padding .5em 0
		line-height 1em
		box-shadow none

	&-submit
		text-align right

/**
 * Contact
 */
.qrcode
	height 224px
	background url('images/qr-code.png') no-repeat

/**
 * Portfolio
 **/
.portfolio

	&-list
		clearfix()
		width size-widthContent + 1.250
		margin 40px 0 0 -20px

	&__item
		float left
		margin 0 0 20px 20px
		box-shadow 0 0 5px #222528

	&__link
		display block
		width 340px
		height 160px
		position relative
		overflow hidden

		&:focus
		&:hover
			.portfolio-caption
				opacity 1
				transform translateY(0)
				transition opacity .4s ease-in, transform .2s ease-in

				&__title
				.portfolio-categories
					transform translateY(0)
					transition all .6s ease

	&__image
		text-align center

	&__thumbnail
		display inline-block
		max-width 100%
		vertical-align bottom

	&-caption
		opacity 0
		position absolute
		position-angles(0, 0, 0, 0)
		background rgba(0,0,0,.6)
		padding 10px
		text-shadow 0 1px 4px rgba(0,0,0,0.5)
		transition all .4s ease-out, opacity .6s ease-out
		transform translateY(50%)

		&__title
			color colorText
			font-size 2.25em
			margin 0 0 10px
			transform translateY(100%)
			transition tranform 2s ease

	&-red
		background colorLink
	&-blue
		background colorTitle
	&-green
		background colorCode
	&-yellow
		background colorEmphasis
	&-pink
		background colorStrong
	&-black
		background lighten(colorBackground, 5%)

	&__thanks
		color colorCode
		text-align right
		i
			color colorLink

	&-categories
		position absolute
		position-angles(auto, 10px, 10px, auto)
		transform translateY(100%)
		transition tranform 2s ease

		&__item
			display inline-block
			color colorText
			.gi
				font-size 2.25em
				width auto
				height auto

/**
 * Page single portfolio
 */
.portfolio-single

	&__thumbnail
		text-align center
		border-radius 4px
		padding 40px 0

	&__title
		margin .6em 0 0

	&__header
		margin-bottom 40px

	&-meta

		&__label
			font-weight 700
			color colorEmphasis
			margin-right 20px

		&__category
			margin-right 10px

			.gi
				vertical-align baseline
				transform translateY(4px)
				width auto
				height auto
				color colorCode
				font-size 1.25em

/**
 * Posts
 **/
.post

	&-header
		margin-bottom 40px

		&__title
			margin 1.5em 0 2px

			a
				color colorTitle

				&:hover
					color colorEmphasis

	&-meta
		&--header
			color colorEmphasis
			font-size .85em
			font-weight 200

		&--footer
			margin-top .5em

	&-share
		float left

		li
			display inline-block
			vertical-align bottom

		a
			display block
			font-size 0
			background lighten(colorBackground, 4%)
			color colorText
			overflow hidden
			text-align center
			border-radius 2px
