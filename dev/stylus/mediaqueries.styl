/**
 * Large desktop
 **/
@media mediaquery-desktop-wide
	/**
	 * Helpers
	 **/
	.hidden-xl
		display none !important

/**
 * Small desktop
 **/
@media mediaquery-desktop-small
	/**
	 * Helpers
	 **/
	.hidden-sm
		display none !important

	.site
		&-header
		&-header__main
			width auto
			float none
			overflow auto

			&:after
				display none

		&-header
			&__main
				margin 0

			&__title
				float left
				width auto
				margin 0

		&-main
			margin 0

	.navigation-social
		float right
		width auto
		margin 0
		padding-bottom 1em

		li
			vertical-align top

	.copyright
	.portrait
		display none

	.secondary-menu
		clear both
		overflow auto
		margin 0
		padding-top 1em
		padding-top calc(1em - 4px)
		border-top 4px solid color-background
		text-align left

		li
			display inline-block

		&__link .gi
			font-size 1em
			display inline-block
			margin-right 10px

	.navigation-main
		width auto
		margin 0
		padding 0 1em

/**
 * Tablets
 **/
@media mediaquery-tablet
	.site-header__title
	.navigation-social
		float none
		margin-top 1em

	/**
	 * Helpers
	 **/
	.hidden-xs
		display none !important

	.secondary-menu
		display none

	.navigation-main
		float none
		text-align center

	.content-area
		width auto
		padding 0 2.5em

	.qrcode
		width 224px
		margin 2em auto

	.skill
		&__list
			width auto
			display block
			margin 0

			& + &
				margin-left 0

		&__item
			width auto
			font-size 1.1em
			text-align left
			padding 5px 10px
			color color-background
			text-shadow 0 1px 2px rgba(255,255,255,.6)

			&:after
			&:before
				height auto
				top 0
				z-index -1

			&:before
				z-index -2

	.hcard
		&__name
			font-size 12.9vw

		&__age
		&__status
			font-size 9.5vw

		&__job
			font-size 10vw

		&__job--alt
			font-size 12vw

	pre[class*="language-"]
	.note
		padding 1em 2.5em
		max-width none
		margin .5em -2.5em
		border-radius 0
		border-left 0
		border-right 0

	div.prism-show-language > div.prism-show-language-label[data-language]
		right -3.5em
		border-radius 0

	.note
		padding-left 3.5em

	.portfolio
		&__item
			width auto
			margin 0
			float none

			& + &
				margin-top 10px
		&__link
			width auto

		&-list
			width auto
			margin 0

/**
 * Phones
 **/
@media mediaquery-mobile
	body
		min-width 300px

	h1
		font-size 2.8em
	h2
		font-size 2.5em
	h3
		font-size 1.4em

	.navigation-social
		width 15em
		margin 1em auto 0

		li
			margin-bottom 4px

	.navigation-main__item a
		padding 20px 5px 10px 5px
		font-size em(22)

		&:after
		&:before
			display none

	.hcard__name
	.hcard__age
	.hcard__status
	.hcard__job
	.hcard__job--alt
		font-size 1em
		margin 0

	.children
		margin-left 0

	.post
		&-content
			text-align left

		&-share
		&-footer
			&__links
				float none
				margin-top 10px

			&__tag-links
				display none

	.portfolio
		&__link
			height auto